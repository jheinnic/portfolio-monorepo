{
    "name": "@jchptf/api",
    "version": "0.0.30",
    "description": "Common, generic types & interfaces for jchptf projects",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "typings": "./dist/index.d.ts",
    "typesVersions": {
        ">=3.2": {
            "dist/utility": [
                "dist/ts3.1/*"
            ]
        },
        ">=3.1": {
            "dist/utility": [
                "dist/ts3.1/*"
            ]
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jheinnic/portfolio-monorepo",
        "homepage": "https://github.com/jheinnic/portfolio-monorepo/tree/master/packages/api"
    },
    "author": "John Heinnickel <jheinnic@hotmail.com>",
    "license": "Apache-2.0",
    "keywords": [
        "compare",
        "equality",
        "ES6",
        "generic",
        "interfaces",
        "mixins",
        "type declarations",
        "typescript"
    ],
    "engines": {
        "node": ">=8.9.0"
    },
    "publishConfig": {
        "access": "public",
        "registry": "http://localhost:4873"
    },
    "scripts": {
        "build": "yarn run clean && tsc --declaration && echo `pwd`",
        "clean": "rm -rf dist build .nyc_output coverage doc; mkdir dist; mkdir build",
        "cover": "yarn test && nyc report --reporter=lcov",
        "doc": "node_modules/.bin/typedoc --mode file --module commonjs --target es6 --tsconfig tsconfig.json --externalPattern node_modules --excludeExternals --excludePrivate --out doc --gitRevision feature_bootstrap src typings",
        "pub": "yarn build && lerna publish --registry http://localhost:4873",
        "test": "rm -rf build && tsc -p test && nyc mocha build/test/*.js"
    },
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.18",
        "@types/sinon": "^7.0.2",
        "@types/sinon-chai": "^3.2.2",
        "chai": "^4.2.0",
        "mocha": "^5.2.0",
        "mocha-typescript": "^1.1.17",
        "nyc": "^12.0.2",
        "sinon": "^7.0.0",
        "sinon-chai": "^3.3.0",
        "ts-sinon": "^1.0.12",
        "typedoc": "^0.13.0",
        "typescript": "^3.1.4"
    },
    "dependencies": {
        "@jchptf/mixins": "^0.0.3",
        "@jchptf/objecttypes": "^0.0.5",
        "@jchptf/reflection": "^0.0.8",
        "@loopback/metadata": "^1.0.1",
        "@thi.ng/errors": "^0.1.12",
        "conditional-type-checks": "^0.5.0",
        "reflect-metadata": "^0.1.12",
        "simplytyped": "^1.6.0",
        "tslib": "^1.9.3"
    }
}
