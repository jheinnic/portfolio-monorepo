{
  "extends": "dtslint/dtslint.json",
  "rules": {
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else",
      "check-whitespace"
    ],
    "interface-name": [true, "always-prefix"],
    "no-useless-files": false,
    /* I find this rule annoying, so I'm disabling it ;) */
    "eofline": false
  }
}
