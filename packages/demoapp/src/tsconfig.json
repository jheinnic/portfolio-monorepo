{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist",
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "paths": {
            "@jchptf/api": ["../../api/src"],
            "@jchptf/config": ["../../config/src"],
            "@jchptf/consul": ["../../consul/src"],
            "@jchptf/coroutines": ["../../coroutines/src"],
            "@jchptf/demoapp": ["."],
            "@jchptf/isaac": ["../../isaac/src"],
            "@jchptf/merkle": ["../../merkle/src"],
            "@jchptf/nestjs": ["../../nestjs/src"],
            "@jchptf/randomart": ["../../randomart/src"],
            "@jchptf/reflection": ["../../reflection/src"],
            "@jchptf/semaphore": ["../../semaphore/src"],
            "@jchptf/txtypes": ["../../txtypes/src"]
        }
    },
    "references": [
        { "path": "../../api/src" },
        { "path": "../../config/src" },
        { "path": "../../consul/src" },
        { "path": "../../coroutines/src" },
        { "path": "../../isaac/src" },
        { "path": "../../merkle/src" },
        { "path": "../../nestjs/src" },
        { "path": "../../randomart/src" },
        { "path": "../../reflection/src" },
        { "path": "../../semaphore/src" },
        { "path": "../../txtypes/src" }
    ],
    "include": [
        "./**/*.ts",
        "../typings/**/*.d.ts"
    ]
}
