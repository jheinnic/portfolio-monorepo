{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../build",
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "paths": {
            "@jchptf/api": ["../../api/src"],
            "@jchptf/reflection": ["../../reflection/src"],
            "@jchptf/txtypes": ["../../txtypes/src"],
            "@jchptf/coroutines": ["../src"]
        }
    },
    "references": [
        { "path": "../../api/src" },
        { "path": "../../reflection/src" },
        { "path": "../../txtypes/src" },
        { "path": "../src" }
    ],
    "include": [ "./**/*.ts", "../typings/**/*.d.ts" ]
}
