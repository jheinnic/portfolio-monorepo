{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "lib": ["es6", "esnext.asynciterable", "es2017.object",  "dom"]
    },
    "include": [
        "./src/**/*.ts",
	    "./typings/**/*.d.ts"
    ],
    "exclude": [
      "./node_modules",
      "./dist",
      "./build",
      "./test",
      "../node_modules",
      "../dist",
      "../build",
      "../test",
      "../../node_modules",
      "../../dist",
      "../../build",
      "../../test"
    ]
}
