{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../dist",
        "baseUrl": ".",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "paths": {
            "@jchptf/api": ["../../api/src"],
            "@jchptf/nestjs": ["../../nestjs/src"],
            "@jchptf/ngrams": ["."],
            "@jchptf/reflection": ["../../reflection/src"],
        }
    },
    "references": [
        { "path": "../../api/src" },
        { "path": "../../nestjs/src" },
        { "path": "../../reflection/src" },
    ],
    "include": [
        "./**/*.ts",
        "../typings/**/*.d.ts"
    ]
}
