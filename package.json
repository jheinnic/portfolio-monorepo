{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@types/chai": "^4.1.7",
        "@types/lolex": "^2.1.3",
        "@types/mocha": "^5.2.5",
        "@types/node": "^10.12.18",
        "@types/sinon": "^7.0.2",
        "@types/sinon-chai": "^3.2.2",
        "benchmark": "^2.1.4",
        "chai": "^4.2.0",
        "dtslint": "^0.4.2",
        "lerna": "^3.8.0",
        "lolex": "^3.0.0",
        "mocha": "^5.2.0",
        "mocha-typescript": "^1.1.17",
        "nyc": "^12.0.2",
        "simplytyped": "^1.6.0",
        "sinon": "^7.2.2",
        "sinon-chai": "^3.3.0",
        "ts-node": "^8.0.3",
        "ts-sinon": "^1.0.12",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.11.1",
        "typedoc": "^0.14.2",
        "typescript": "3.2.2"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "build": "yarn install && lerna -v && lerna bootstrap && lerna run build --sort",
        "cover": "lerna run cover",
        "depgraph": "scripts/depgraph && git add assets/deps.png && git commit -m 'docs: update dep graph' && git push",
        "doc": "lerna run doc",
        "examples": "ex=\"examples/*\"; for e in $ex; do (cd $e && yarn build); done",
        "pub": "lerna publish --registry http://localhost:4873 && yarn doc && scripts/upload-docs",
        "test": "yarn build && lerna run test"
    },
    "name": "monorepo"
}
