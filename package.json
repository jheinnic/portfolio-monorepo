{
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@octokit/core": "^3.5.1",
        "@thi.ng/dgraph": "^1.2.28",
        "@thi.ng/transducers": "^7.4.0",
        "@types/chai": "^4.1.7",
        "@types/lolex": "^2.1.3",
        "@types/mocha": "^5.2.5",
        "@types/node": "12.20.11",
        "@types/sinon": "^7.0.2",
        "@types/sinon-chai": "^3.2.2",
        "benchmark": "^2.1.4",
        "chai": "^4.2.0",
        "dtslint": "^4.0.5",
        "lerna": "^3.22.1",
        "lolex": "^3.0.0",
        "mocha": "^5.2.0",
        "mocha-typescript": "^1.1.17",
        "nyc": "^12.0.2",
        "simplytyped": "3.3.0",
        "sinon": "^7.2.2",
        "sinon-chai": "^3.3.0",
        "typedoc": "0.18.0",
        "typescript": "3.8.3"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap --sort",
        "build": "lerna -v && tsc -b --clean && lerna clean && lerna bootstrap && lerna run build --sort",
        "cover": "lerna run cover --sort",
        "depgraph": "scripts/depgraph && git add assets/deps.png && git commit -m 'docs: update dep graph' && git push",
        "doc": "lerna run doc --sort",
        "examples": "ex=\"examples/*\"; for e in $ex; do (cd $e && yarn build); done",
        "pub": "yarn build && lerna publish --sort --registry http://localhost:4873 && yarn doc && scripts/upload-docs",
        "test": "yarn build && lerna run test --sort"
    },
    "name": "monorepo",
    "dependencies": {},
    "engines": {
        "node": ">=12.20.11"
    }
}
